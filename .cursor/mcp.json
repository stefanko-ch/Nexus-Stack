{
  "//": "MCP Server Configuration for Cursor",
  "//": "This file uses 'mcpServers' key format required by Cursor",
  "//": "Required environment variables:",
  "//": "  - CLOUDFLARE_API_TOKEN: Cloudflare API token for Cloudflare MCP servers",
  "//": "  - HCLOUD_TOKEN: Hetzner Cloud API token",
  "//": "  - GITHUB_TOKEN: GitHub personal access token (optional, for GitHub MCP)",
  "//": "  - TFE_TOKEN: Terraform Cloud/Enterprise token (optional)",
  "mcpServers": {
    "//": "Cloudflare MCP Servers - Remote servers via mcp-remote",
    "cloudflare-observability": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://observability.mcp.cloudflare.com/mcp"],
      "env": {
        "CLOUDFLARE_API_TOKEN": "${CLOUDFLARE_API_TOKEN}"
      }
    },
    "cloudflare-workers": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://workers.mcp.cloudflare.com/mcp"],
      "env": {
        "CLOUDFLARE_API_TOKEN": "${CLOUDFLARE_API_TOKEN}"
      }
    },
    "cloudflare-dns-analytics": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://dns-analytics.mcp.cloudflare.com/mcp"],
      "env": {
        "CLOUDFLARE_API_TOKEN": "${CLOUDFLARE_API_TOKEN}"
      }
    },
    "cloudflare-documentation": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://docs.mcp.cloudflare.com/mcp"]
    },
    "//": "Hetzner Cloud MCP Server - Requires Python 3.11+ and pip install",
    "hetzner": {
      "command": "python",
      "args": ["-m", "mcp_hetzner.server"],
      "env": {
        "HCLOUD_TOKEN": "${HCLOUD_TOKEN}"
      }
    },
    "//": "Docker MCP Server - Requires Python 3.12+ and Docker",
    "docker": {
      "command": "uvx",
      "args": ["docker-mcp"]
    },
    "//": "Terraform MCP Server - Official HashiCorp server",
    "terraform": {
      "command": "terraform-mcp-server",
      "args": ["stdio"],
      "env": {
        "TFE_TOKEN": "${TFE_TOKEN}",
        "TFE_ADDRESS": "${TFE_ADDRESS:-https://app.terraform.io}"
      }
    },
    "//": "GitHub MCP Server - For GitHub API access",
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "//": "Context7 MCP Server - Upstash Context7 for vector search and context management",
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    }
  }
}
